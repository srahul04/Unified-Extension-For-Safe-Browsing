{
    "manifest_version": 3,
    "name": "Web Security Analyzer",
    "version": "1.1",
    "description": "Performs client-side and HTTP header security analysis of web pages, with Django considerations.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon1.png",
            "48": "icons/icon2.png",
            "128": "icons/icon3.png"
        }
    },
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "webRequest",
        "webNavigation",
        "notifications",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon1.png",
        "48": "icons/icon2.png",
        "128": "icons/icon3.png"
    }
}
